Procedure detiene1()
   *------------------------------------------------------*
   local i:= otab:value
   xoActivex := "oActiveX_" + StrZero( i, 4 )
   If HB_IsObject(&xoActiveX)
      &xoActiveX:Stop()
   Endif
   Return

