Procedure retro1()
   *------------------------------------------------------*
   local i:= otab:value
   xoActivex := "oActiveX_" + StrZero( i, 4 )
   
   If HB_IsObject(&xoActiveX)
      Try
      &xoActiveX:GoBack()
   Catch e
   End
endif
Return nil

